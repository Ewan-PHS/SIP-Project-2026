unit SIP_GUI;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm1 = class(TForm)
    btnTop: TButton;
    imgTop: TImage;
    imgFront: TImage;
    btnFront: TButton;
    imgSide: TImage;
    btnSide: TButton;
    pnlPreview: TPanel;
    Image4: TImage;
    lblPreview: TLabel;
    btnGenerate: TButton;
    procedure btnFrontClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnFrontClick(Sender: TObject);
var
  OpenDialog: TOpenDialog;
  sFilePath: string;
begin
  sFilePath := '';
  OpenDialog := TOpenDialog.Create(nil);
  try

    OpenDialog.Filter := 'Image files|*.png;*.jpg;*.jpeg;*.bmp;*.gif';
    OpenDialog.Options := [ofFileMustExist];

    if OpenDialog.Execute then
    begin
      imgFront.Picture.LoadFromFile(OpenDialog.FileName);
      // sFilePath := OpenDialog.FileName;
    end;
  finally
    OpenDialog.Free;
  end;

end;

end.
